{
  "name": "@repo/ui",
  "main": "dist/index.mjs",
  "types": "dist/types/index.d.ts",
  "private": true,
  "exports": {
    ".": {
      "types": "./dist/types/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.mjs"
    }
  },
  "scripts": {
    "panda:gen": "panda codegen",
    "ship": "panda ship src/**/*.tsx --outfile dist/panda.json",
    "build": "pnpm build:style && vite build && tsc --project tsconfig.build.json",
    "build:style": "pnpm panda:gen && pnpm ship",
    "build:pkg": "pnpm build",
    "generate:component": "turbo gen react-component",
    "lint:prettier": "prettier . --check",
    "lint:prettier:fix": "prettier . --check --write",
    "lint": "eslint './src/**/{*.js,*.jsx,*.ts,*.tsx}' --max-warnings 0",
    "lint:fix": "eslint './src/**/{*.js,*.jsx,*.ts,*.tsx}' --fix",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "vitest run",
    "clean": "pnpm clean:dist",
    "clean:dist": "rimraf dist"
  },
  "dependencies": {
    "@radix-ui/react-slot": "1.0.2"
  },
  "devDependencies": {
    "@pandacss/dev": "0.27.3",
    "@repo/eslint-config": "workspace:*",
    "@repo/icon": "workspace:*",
    "@repo/panda-preset": "workspace:*",
    "@repo/typescript-config": "workspace:*",
    "@storybook/addon-essentials": "^7.6.10",
    "@storybook/addon-interactions": "^7.6.10",
    "@storybook/addon-links": "^7.6.10",
    "@storybook/addon-onboarding": "^1.0.10",
    "@storybook/blocks": "^7.6.10",
    "@storybook/builder-vite": "7.6.10",
    "@storybook/react": "^7.6.10",
    "@storybook/react-vite": "^7.6.10",
    "@storybook/test": "^7.6.10",
    "@testing-library/react": "14.1.2",
    "@turbo/gen": "1.11.3",
    "@types/eslint": "8.56.2",
    "@types/node": "20.11.5",
    "@types/react": "18.2.48",
    "@types/react-dom": "18.2.18",
    "@vitejs/plugin-react": "4.2.1",
    "eslint": "8.56.0",
    "eslint-plugin-storybook": "0.6.15",
    "react": "18.2.0",
    "react-dom": "^18.2.0",
    "storybook": "^7.6.10",
    "typescript": "5.3.3",
    "vite": "5.0.12",
    "vitest": "1.2.1"
  },
  "volta": {
    "extends": "../../package.json"
  }
